{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/utils/*": ["src/utils/*"],
      "@/providers/*": ["src/providers/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/config/*": ["src/config/*"],
      "@/styles/*": ["src/styles/*"],
      "@/theme/*": ["src/theme/*"],
      "@/lib/*": ["src/lib/*"],
      "@/public/*": ["public/*"],
      "@/app/*": ["app/*"],
    }
  }
}
